<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tool="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/recycle_item_route_direction"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginStart="10dp"
            android:src="@drawable/dir1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/recycle_item_route_tv_action"
            style="@style/TextAppearance.AppCompat.Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:singleLine="true"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/recycle_item_route_direction"
            app:layout_constraintTop_toTopOf="parent"
            tool:text="起点" />

        <View
            android:id="@+id/recycle_item_route_split_line"
            android:layout_width="0dp"
            android:layout_height="0.1dp"
            android:background="@color/color_line_bg"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@id/recycle_item_route_tv_action" />

        <View
            android:id="@+id/recycle_item_route_direction_top"
            android:layout_width="3dp"
            android:layout_height="7dp"
            android:background="@color/color_line_bg"
            app:layout_constraintEnd_toEndOf="@id/recycle_item_route_direction"
            app:layout_constraintStart_toStartOf="@id/recycle_item_route_direction"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/recycle_item_route_direction_bottom"
            android:layout_width="3dp"
            android:layout_height="7dp"
            android:background="@color/color_line_bg"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@id/recycle_item_route_direction"
            app:layout_constraintStart_toStartOf="@id/recycle_item_route_direction" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>